<h1>Burgers</h1>

<h2>Burgers that I have not eaten</h2>


<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">Devour it</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>



<h2>Burgers that I have eaten</h2>


<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			
			</li>
		{{/if}}
	{{/each}}
</ul>



<h2>Add a burger</h2>
<form class ="create-update-form" action="/" method="POST">


	<div class ="form-group">
		<label for ="bu">Burger Name:</label>
		<input type="text" id="bu" name="name">
	</div>


	<div class="form-group">
		<label for="dev">Devoured?</label><br>
		<input type= "radio" name="devoured" value="1" checked>Devoured<br>
		<input type= "radio" name="not devoured" value="0"> Not devoured
	</div>

	<button type="submit">Add Burger</button>

	</form>